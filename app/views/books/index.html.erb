<h1>Bookers</h1>

<table>
  <% @books.each do |bk| %>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= bk.title %></td>
      <td><%= bk.body %></td>
      <td><%= link_to "show", book_path(bk.id) %></td>
      <td><%=link_to "edit", edit_book_path(bk.id) %></td>
      <td><%=link_to "destroy", destroy_book_path(bk.id) %></td>
    </tr>
  </tbody>
   <% end %>
</table>
